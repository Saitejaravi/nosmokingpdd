<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FFFFFF"
    android:padding="20dp">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose your profile type"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginBottom="20dp"/>

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/profiletype"
        android:contentDescription="Profile Selection Image"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/doctorButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Doctor"
        android:backgroundTint="#AEC6CF"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/patientButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Patient"
        android:backgroundTint="#AEC6CF"
        android:textColor="#FFFFFF"/>

</LinearLayout>
