<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/questionnaireLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Back Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/light_blue"
            android:padding="10dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_back"
                android:contentDescription="Back Button"
                android:padding="5dp"/>
        </LinearLayout>

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mindful Biweekly Reflection"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"/>

        <!-- Question 1 -->
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Q1. How soon after waking do you smoke your first cigarette?"
            android:textSize="16sp" android:layout_marginTop="10dp" android:textColor="@color/black"/>

        <CheckBox android:id="@+id/cbQ1_1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Within 5 minutes"/>
        <CheckBox android:id="@+id/cbQ1_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="5 - 30 minutes"/>
        <CheckBox android:id="@+id/cbQ1_3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="31 - 60 minutes"/>

        <!-- Question 2 -->
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Q2. Do you find it difficult to refrain from smoking in places where it is forbidden?"
            android:textSize="16sp" android:layout_marginTop="10dp" android:textColor="@color/black"/>

        <CheckBox android:id="@+id/cbQ2_1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Yes"/>
        <CheckBox android:id="@+id/cbQ2_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="No"/>

        <!-- Question 3 -->
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Q3. Which cigarette would you hate to give up?"
            android:textSize="16sp" android:layout_marginTop="10dp" android:textColor="@color/black"/>

        <CheckBox android:id="@+id/cbQ3_1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="First in the morning"/>
        <CheckBox android:id="@+id/cbQ3_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Other"/>

        <!-- Question 4 -->
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Q4. How many cigarettes do you smoke per day?"
            android:textSize="16sp" android:layout_marginTop="10dp" android:textColor="@color/black"/>

        <CheckBox android:id="@+id/cbQ4_1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Less than 10"/>
        <CheckBox android:id="@+id/cbQ4_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="11 - 20"/>
        <CheckBox android:id="@+id/cbQ4_3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="21 - 30"/>
        <CheckBox android:id="@+id/cbQ4_4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="More than 30"/>

        <!-- Submit Button -->
        <Button
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:backgroundTint="#0056b3"
            android:padding="10dp"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</ScrollView>
