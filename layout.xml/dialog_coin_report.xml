<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@drawable/popup_background"
    android:orientation="vertical"
    android:elevation="10dp"
    android:gravity="center_horizontal">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Points   Counts"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center"
        android:paddingBottom="12dp"/>

    <!-- Points System -->
    <TextView android:text="+50    0" style="@style/CoinReportStyle"/>
    <TextView android:text="+25    1" style="@style/CoinReportStyle"/>
    <TextView android:text="+10    &lt; 5" style="@style/CoinReportStyle"/>
    <TextView android:text="+5     &lt; 10" style="@style/CoinReportStyle"/>
    <TextView android:text="-5     &gt; 12" style="@style/CoinReportStyle"/>
    <TextView android:text="-50    Absent" style="@style/CoinReportStyle"/>

    <!-- Close Button -->
    <TextView
        android:id="@+id/btnClosePopup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:textColor="@android:color/holo_red_dark"
        android:padding="12dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"/>
</LinearLayout>
